{
  "server": {
    "port": 3080,
    "host": "localhost"
  },
  "redisUrl": "redis://inventory-cache:6379",
  "mongodb": {
    "url": "mongodb://inventory-db:27017/inventory",
    "options": {
      "useNewUrlParser": true,
      "useUnifiedTopology": true,
      "useCreateIndex": true,
      "useFindAndModify": false
    }
  },
  "cors": {
    "enabled": true,
    "origin": "*",
    "methods": "GET,HEAD,PUT,PATCH,POST,DELETE",
    "preflightContinue": false,
    "optionsSuccessStatus": 204
  }
}